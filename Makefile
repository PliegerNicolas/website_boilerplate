# **************************************************************************** #
# *                              GENERAL INFO                                * #
# **************************************************************************** #

NAME			:=			boilerplate

# **************************************************************************** #
# *                                 DOCKER                                   * #
# **************************************************************************** #

DC			:=			docker compose

# **************************************************************************** #
# *                                FUNCTIONS                                 * #
# **************************************************************************** #

define build_volume_folders
	mkdir -p ${HOME}/data/postgresql/nestjs
	mkdir -p ${HOME}/data/redis
endef

# **************************************************************************** #
# *                                  RULES                                   * #
# **************************************************************************** #

all:	up

up:
	$(call build_volume_folders)
	${DC} up -d --build

down:
	${DC} down -v --remove-orphans

re: down up

purge: down
	docker system prune -fa

.PHONY: up down re purge
